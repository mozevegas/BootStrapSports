@{
    ViewBag.Title = "Home Page";
}
<!--  Jumbotron -->
<div class="jumbotron">
    <div class="media">
        <div class="media-body">
            <h1 class="media-heading">TIY Sports</h1>
            <p><span class="glyphicon glyphicon-heart"></span> For the students of The Iron Yard</p>
        </div>
        <div class="media-right">
            <img src="~/Content/Images/Sports.jpg" class="media-object img-circle" width="150" height="150">
        </div>
    </div>
</div>
<!--  PhotoArticlesPanel -->
<div class="row">
    <div class="col-sm-6 col-md-3 text-center">
        <div class="thumbnail">
            <img src="~/Content/Images/football.jpg" alt="...">
            <div class="caption">
                <h3><strong>Football</strong></h3>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3 text-center">
        <div class="thumbnail">
            <img src="~/Content/Images/baseball.jpg" alt="...">
            <div class="caption">
                <h3><strong>Baseball</strong></h3>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3 text-center">
        <div class="thumbnail">
            <img src="~/Content/Images/basketball.jpg" alt="...">
            <div class="caption">
                <h3><strong>Basketball</strong></h3>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3 text-center">
        <div class="thumbnail">
            <img src="~/Content/Images/quidditch.jpg" alt="...">
            <div class="caption">
                <h3><strong>Quidditch</strong></h3>
            </div>
        </div>
    </div>
</div>
<!--  NewFeaturesPanel -->
<div class="panel-group">
    <div class="panel panel-warning">
        <div class="panel-heading">
            <h4 class="text-warning">We've added some brand new features in version 2.0! <small class="text-primary">Learn more</small></h4>
        </div>
    </div>
</div>
<!--  LogInIntoEdit Panel -->
<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            <p><span class="glyphicon glyphicon-user"></span><small><strong> Please log in to edit</strong></small><button type="button" class="btn btn-primary btn-md pull-right">Facebook</button></p>
